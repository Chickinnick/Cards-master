<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_grid_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_grid_card_h"
    android:layout_margin="12dp"

    android:background="@drawable/card"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_bg_title_star">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="Lorem ipsum"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/favourite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle_star_bg"
            android:src="@drawable/ic_star" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="14dp" />

    <TextView
        android:id="@+id/item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/mdtp_date_picker_month_day"
        android:textSize="@dimen/text_size_grid"
        android:windowSoftInputMode="stateHidden" />


</RelativeLayout>